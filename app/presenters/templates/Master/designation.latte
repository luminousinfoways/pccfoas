{block content}
<div id="content">
	<h2>Manage Designation</h2>
	<div class="boxes">		
		{control designation}
	</div>
	<table n:if="$datas" id="data_table" border="1">
		<tr>
			<th>#</th>
			<th>Designation</th>
			<th>Section</th>
			<th>Created</th>
			<th>Action</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		<tr n:foreach="$datas as $data">
			<td>{++$cnt}</td>
			<td>{$data->name}</td>
			<td>{$data->section_id}</td>
			<td>{$data->created|date:'d/m/Y'}</td>
			<td><a n:href="designationAction $data->id">{($data->is_enable == 1)?'Disable':'Enable'}</a></td>
			<td><a n:href="designationEdit $data->id">Edit</a></td>
			<td><a n:href="designationDelete $data->id">Delete</a></td>			
		</tr>
	</table>		
</div>
{/block}